<% content_for(:title) { "Position trainer" } %>

<div class="position-trainer container">
  <div class="instructions invisible"></div>

  <%= render partial: "puzzle_player/above_board" %>
  <%= render partial: "puzzle_player/board_area" %>

  <div class="actions">
    <button class="button restart">Reset position</button>
  </div>
</div>

<script>
  document.addEventListener(`DOMContentLoaded`, () => {
    blitz.position = {
      fen: "<%= @position.fen %>",
      goal: "<%= @position.goal %>"
    }
  })
</script>
